@model IEnumerable<GYMProgram.Models.Bookings>

<div class="container">
    <div class="row text-center">
        <br>
        <div class="col-12">
            <h2 class="text-primary" style="padding:5px">Available Bookings</h2>
        </div>
        <br>
        @{
            string date = "";
            string StartDate = "";
            string EndDate = "";
            string status = "";

        }
        @foreach (var item in Model)
        {

            date = item.StartDate.ToString("yyyy-MM-dd");
            StartDate = item.StartDate.ToString("hh:mm tt");
            EndDate = item.EndDate.ToString("hh:mm tt");
            
            <div for="info" class="btn btn-info  col-md-2 col-sm-12" style="margin: 4px; border-radius: 28px">
                <h6><span>Date : </span><span>@date</span></h6>
                <h6><span>From : </span><span>@StartDate</span></h6>
                <h6><span>To : </span><span>@EndDate</span></h6>

                <h6>
                    <input type="button" value="Create Booking" class="btn btn-outline-secondary btn-sm"
                           onclick="AjaxCreateCustomerBooking('DIV_DailyBookings',document.getElementById('customer_Guid').value,'@item.Guid')" />
                </h6>

                @*<h6>@date</h6><h6>@StartDate</h6> <input type="button" id="success" class="badgebox">*@
                @*<span class="badge">&check;</span>*@
            </div>

        }
    </div>
</div>
