@model GYMProgram.Models.WeekDay

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>WeekDay</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DayNumber" class="control-label"></label>
                @*<input asp-for="Name" class="form-control" />*@
                <select asp-for="DayNumber" class="form-control" asp-items="ViewBag.ListWeekDays"></select>
                <span asp-validation-for="DayNumber" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Notes" class="control-label"></label>
                <input asp-for="Notes" class="form-control" />
                <span asp-validation-for="Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HeadGuid" class="control-label"></label>
                <select name="headGuid" class="form-control" asp-items="ViewBag.WeekDaysHeads"></select>
            </div>
            <div class="form-group">
                <label asp-for="WorkStartHour" class="control-label"></label>
                <input asp-for="WorkStartHour" class="form-control" />
                <span asp-validation-for="WorkStartHour" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="WorkEndHour" class="control-label"></label>
                <input asp-for="WorkEndHour" class="form-control" />
                <span asp-validation-for="WorkEndHour" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="QTYCustomers" class="control-label"></label>
                <input asp-for="QTYCustomers" class="form-control" />
                <span asp-validation-for="QTYCustomers" class="text-danger"></span>

            </div>
            <div class="form-group">
                <label asp-for="Number" class="control-label"></label>
                <input asp-for="Number" class="form-control" />
                <span asp-validation-for="Number" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
